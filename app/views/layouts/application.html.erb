<!DOCTYPE html>
<html>
  <head>
    <title>Vibbra</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main role="main">
      <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: "alert alert-info") %>
      <% end %>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <%= yield :javascript %>
  </body>
</html>
