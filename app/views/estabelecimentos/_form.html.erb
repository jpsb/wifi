<%= form_with(model: estabelecimento, local: true) do |form| %>
  <% if estabelecimento.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
      <% estabelecimento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-8">
      <%= form.label :nome %>
      <%= form.text_field :nome, class: "form-control" %>
    </div>
    <div class="form-group col-md-4">
      <%= form.label :tipo %>
      <%= form.select :tipo, Estabelecimento.tipo.options, { include_blank: true }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :endereco %>
      <%= form.text_field :endereco, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :cidade %>
      <%= form.text_field :cidade, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :estado %>
      <%= form.text_field :estado, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :pais %>
      <%= form.text_field :pais, class: "form-control" %>
    </div>
  </div>
 
  <%= form.submit "Salvar", class: "btn btn-primary" %>
<% end %>

<hr>
