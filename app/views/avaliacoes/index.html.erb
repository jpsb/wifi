<p id="notice"><%= notice %></p>

<h1>Avaliações</h1>

<%= form_tag(avaliacoes_path, method: "get") do %>
  <p>
    <%= label_tag :do_estabelecimento %><br>
    <%= select_tag "do_estabelecimento", options_from_collection_for_select(Estabelecimento.all.order('nome ASC'), "id", "nome", params[:do_estabelecimento]), include_blank: true %>
  </p>
  <p>
    <%= label_tag :com_internet %><br>
    <%= select_tag "com_internet", options_for_select(Avaliacao.internet.options, params[:com_internet]), { include_blank: true } %>
  </p>
  <p>
    <%= label_tag :com_nota_geral %><br>
    <%= select_tag "com_nota_geral", options_for_select(1..5, params[:com_nota_geral]), { include_blank: true } %>
  </p>
  <p>
    <%= submit_tag "Filtrar" %>  
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Estabelecimento</th>
      <th>Internet?</th>
      <th>Nota Geral</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @avaliacoes.each do |avaliacao| %>
      <tr>
        <td><%= link_to "##{avaliacao.id}", [avaliacao.estabelecimento, avaliacao] %></td>
        <td><%= avaliacao.estabelecimento.nome %></td>
        <td><%= avaliacao.internet_text %></td>
        <td><%= avaliacao.avaliacao_geral %></td>
        <td><%#= link_to 'Show', estabelecimento %></td>
        <td><%#= link_to 'Edit', edit_estabelecimento_path(estabelecimento) %></td>
        <td><%#= link_to 'Destroy', estabelecimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

